{
  "name": "url-to-sha",
  "description": "Plugin for semantic-action that fetches commit SHA from JSON at given URL",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/url-to-sha/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/url-to-sha#readme",
  "keywords": [
    "commit",
    "git",
    "release",
    "remote",
    "url"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/url-to-sha.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.0",
    "dont-crack": "1.2.1",
    "git-issues": "1.3.1",
    "github-post-release": "1.12.1",
    "license-checker": "13.0.2",
    "mocha": "3.4.2",
    "nock": "9.0.14",
    "nsp": "2.7.0",
    "pre-git": "3.15.0",
    "prettier-standard": "6.0.0",
    "semantic-release": "6.3.6",
    "simple-commit-message": "3.3.1",
    "sinon": "2.4.1",
    "snap-shot": "2.17.0",
    "standard": "10.0.2"
  },
  "release": {
    "analyzeCommits": "simple-commit-message",
    "generateNotes": "github-post-release",
    "verifyRelease": {
      "path": "dont-crack",
      "test-against": []
    }
  },
  "dependencies": {
    "check-more-types": "2.24.0",
    "debug": "2.6.8",
    "got": "7.1.0",
    "lazy-ass": "1.6.0"
  }
}
